{
  "extends": [
    "config:base",
    ":semanticCommitTypeAll(chore)",
    "default:pinDigestsDisabled"
  ],
  "separateMinorPatch": true,
  "patch": {
    "automerge": true
  },
  "pin": {
    "automerge": true
  },
  "lockFileMaintenance": {
    "automerge": true
  },
  "vulnerabilityAlerts": {
    "labels": [
      "security"
    ]
  },
  "labels": [
    "dependencies",
    "chore"
  ],
  "ignorePaths": ["test/"]
}
